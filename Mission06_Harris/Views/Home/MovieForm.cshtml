@model Mission06_Harris.Models.Movie
<!-- Category, Title, Year, Director, Rating (dropdown), Edited (yes/no--true/false), Lent to, Notes(limited 25 chars)
edited, lent to, notes not required to enter a new field, the rest are 
-->
@{
    ViewData["Title"] = "Add Movie";
}
<h1>Movie Form</h1>
<br />
<form method="post">
    <label asp-for="Category">Category: </label>
    <input asp-for="Category"/><br /><br />
    <label asp-for="Title">Title: </label>
    <input asp-for="Title" /><br /><br />
    <label asp-for="Year">Year: </label>
    <input asp-for="Year" /><br /><br />
    <label asp-for="Director">Director: </label>
    <input asp-for="Director" /><br /><br />
    <label asp-for ="Rating">Rating: </label>
    <select asp-for ="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br /><br />
    <label asp-for="Edited">Edited: </label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br /><br />
    <label asp-for="LentTo">Lent to: </label>
    <input asp-for="LentTo"/>
    <br /><br />
    <label asp-for="Notes">Notes: </label>
    <input asp-for="Notes" />
    <br /><br />
    <button type="Submit">Submit the application</button>
</form>